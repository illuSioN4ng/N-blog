<script>
    $(function() {
        $('#btnSub').on('click', function () {
            var file1 = $('#file1').val(),
                    errorTip = '<div id="errorTip" class="alert alert-warning"></div> ';

            //$("#errorTip,#alt_warning").remove();

            if (file1.length == 0) {
                $("#form").prepend(errorTip.format('请选择要上传的文件'));
                return false;
            }

            var extName = file1.substring(file1.lastIndexOf('.'), file1.length).toLowerCase();

            if (extName != '.png' && extName != '.jpg') {
                $("#form").prepend(errorTip.format('只支持png和jpg格式图片'));
                return false;
            }
            return true;
        });
    });
</script>
